<div class="col-md-4">
  <div class="card">
    <center>
      <h3 class="course-name">
        <%= @course.name %>
        <span class="label label-<%= @course.status_label %>">
          <%= @course.status_content %></span>
      </h3>
    </center>
    <span>
      <%= social_share_button_tag("#{t("view.user_course.show.share_with_social")}
        #{@course.name}#{t("view.user_course.show.at")}",
        url: "lvh.me:3000/user_courses/#{@course.id}") %>
    </span>
    </br>
    <span>
      <strong><%= t "view.supervisor.course.show.description" %></strong>
    </span>
    <p><%= @course.description %></p>
    <span>
      <strong><%= t "view.supervisor.course.show.date" %></strong>
    </span>
    <p><%= @course.duration %></p>
  </div>
</div>

<div class="col-md-8" id= "courses-tab" data-current-tab=<%= @current_tab %> >
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#subjects">
      <%= t "view.supervisor.course.show.subjects" %></a></li>
    <li><a data-toggle="tab" href="#trainees">
      <%= t "view.supervisor.course.show.trainees" %></a></li>
    <li><a data-toggle="tab" href="#supervisors">
      <%= t "view.supervisor.course.show.supervisors" %></a></li>
    <li><a data-toggle="tab" href="#all-activities">
      <%= t "view.supervisor.course.show.all_activities" %></a></li>
  </ul>
  <div class="tab-content">
    <div id="subjects" class="tab-pane fade in active">
      <%= render partial: "subjects_on_course", locals: {subjects: @subjects} %>
    </div>
    <div id="trainees" class="tab-pane fade">
      <%= render partial: "trainees_on_course", locals: {trainees: @trainees} %>
    </div>
    <div id="supervisors" class="tab-pane fade">
      <%= render partial: "supervisors_on_course", locals: {supervisors: @supervisors} %>
    </div>
    <div id="all-activities" class="tab-pane fade">
      <%= render partial: "all_activities_on_course", locals: {activities: @activities} %>
    </div>
  </div>
</div>
