<div class="container card">
  <div class="row">
    <div class="col-md-8">
      <h2><%= t "view.supervisor.course.index.list_all_courses" %></h2>
    </div>
    <div class="col-md-4">
      <br>
      <div>
        <%= search_form_for [:supervisor, @search], class: "form-inline" do |f| %>
          <%= f.text_field :name_cont, placeholder: t("view.search_subject.name"),
            class: "form-control search_select" %>
          <%= f.submit t("view.search"), class: "btn btn-info margin_left_btn_submit" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="table-responsive">
        <%= link_to t("view.supervisor.course.index.add_new_course"),
          new_supervisor_course_path, class: "btn btn-primary" %>

        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th><%= sort_link @search, :name,
              t("view.supervisor.course.index.name") %></th>
            <th><%= sort_link @search, :description,
              t("view.supervisor.course.index.description") %></th>
            <th><%= t "view.supervisor.course.index.duration" %></th>
            <th><%= t "view.supervisor.course.index.status" %></th>
            <th></th>
            <th><%= t "view.supervisor.course.index.action" %></th>
            <th></th>
          </thead>
          <tbody>
            <%= render(partial: "course", collection: @courses, as: :course) || t("view.supervisor
              .course.index.no_course.display") %>
          </tbody>
        </table>
        <%= paginate @courses %>
      </div>
    </div>
  </div>
</div>
