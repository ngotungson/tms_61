<div class="container card">
  <div class="row min-height">
    <div class="row user-index-header">
      <div class="col-md-6">
        <h2><%= t "view.supervisor.user.index.list_all_user" %></h2>
      </div>
      <div class="col-md-6">
        <div>
          <br>
          <%= search_form_for [:supervisor, @search], class: "form-inline" do |f| %>
            <%= f.text_field :name_cont, placeholder: t("view.search_user.name"),
              class: "form-control search_select" %>
            <%= f.text_field :email_cont, placeholder: t("view.search_user.email"),
            class: "form-control search_select" %>
            <%= f.submit t("view.search"), class: "btn btn-info margin_left_btn_submit" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="table-responsive">
        <div class="index-buttons">
          <%= link_to t("view.supervisor.user.index.add_new_user"),
            new_supervisor_user_path, class: "btn btn-primary" %>
          <%= link_to t("view.supervisor.user.index.CSV"),
            supervisor_users_path(params.merge(format: "csv")), class: "btn btn-success" %>
          <%= link_to t("view.supervisor.user.index.xls"),
            supervisor_users_path(params.merge(format: "xls")), class: "btn btn-success" %>
          <%= link_to t("view.supervisor.user.index.xlsx"),
            supervisor_users_path(format: :xlsx), class: "btn btn-success" %>
          <div class="import-form pull-right inline-block">
              <%= form_tag import_supervisor_users_path, multipart: true do %>
                <%= file_field_tag :file, class: "inline-block" %>
                <%= submit_tag "Import", class: "btn btn-success" %>
              <% end %>
          </div>
        </div>
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th><%= sort_link @search, :name, t("view.supervisor.user.index.name") %></th>
            <th><%= sort_link @search, :email, t("view.supervisor.user.index.email") %></th>
            <th><%= sort_link @search, :role, t("view.supervisor.user.index.role") %></th>
            <th><%= t "view.supervisor.user.index.action" %></th>
          </thead>
          <tbody>
            <%= render(partial: "user", collection: @users, as: :user) || t("view
              .supervisor.user.index.no_user_display") %>
          </tbody>
        </table>
      </div>
      <%= paginate @users %>
    </div>
  </div>
</div>
