<%= form_for [:supervisor, @subject] do |f| %>

  <%= render "shared/error_messages", object: @subject %>
  <div class="subject-new col-md-4">
    <div class="card">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :duration %>
        <%= f.text_field :duration, class: "form-control",
          placeholder: t("view.supervisor.subject.form.duration") %>
      </div>

      <div class="actions">
        <%= f.submit t("view.supervisor.subject.form.save"),
          class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>


  <div class="tasks card col-md-6 col-md-offset-1" id="tasks">
    <div class="">
      <div class="form-group add">
        <%= link_to_add_fields t("view.supervisor.subject.form.add_task"),
          f, :tasks %>
      </div>

    <%= f.fields_for :tasks do |builder| %>
      <%= render "task_fields", f: builder %>
    <% end %>

    <div class="new_task"></div>
  </div>

<% end %>

